{% extends 'base.html.twig' %}

{% block title %}Talks{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-6 text-center text-sm-left">
            <h2>Talks</h2>
        </div>
        <div class="col-sm-6 text-center text-sm-right">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('talk_create') }}" class="btn btn-success">Add talk</a>
            {% endif %}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 table-responsive-sm">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Speaker</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for talk in talks %}
                    <tr>
                        <td>{{ talk.title }}</td>
                        <td>{{ talk.speaker.name }}</td>
                        <td class="text-center">
                            <a href="{{ path('talk_show', {'id': talk.id}) }}"
                               class="btn btn-info mb-2 mb-md-0">
                                Show
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('talk_edit', {'id': talk.id}) }}"
                                   class="btn btn-warning mb-2 mb-md-0">
                                    Edit
                                </a>
                                <a href="{{ path('talk_confirm_delete', {'id': talk.id}) }}"
                                   class="btn btn-danger mb-2 mb-md-0">
                                    Delete
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
