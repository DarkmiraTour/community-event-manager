{% extends 'base.html.twig' %}

{% block title %}Edit {{ talk.title }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h1>Edit talk</h1>
        </div>
    </div>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-12">
            {{ form_widget(form) }}
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <a href="{{ path('talk_index') }}" class="btn btn-light">Back to list</a>
        </div>
        <div class="col-6 text-right">
            <button type="submit" class="btn btn-success">Edit talk</button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
