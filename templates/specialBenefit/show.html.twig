{% extends "base.html.twig" %}

{% block title %}{{ specialBenefit.label }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h1>{{ specialBenefit.label }}</h1>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <table class="table">
                <tbody>
                <tr>
                    <th>Label</th>
                    <td>{{ specialBenefit.label }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ specialBenefit.price|localizedcurrency(currency) }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ specialBenefit.description | nl2br }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-5">
            <a href="{{ path('special_benefit_index') }}" class="btn btn-light">Back to list</a>
        </div>
        <div class="col-7 text-right">
            {% if is_granted('ROLE_ADMIN') %}
                <div class="float-right">
                    <a class="btn btn-warning"
                       href="{{ path('special_benefit_edit', {'id': specialBenefit.id}) }}">Edit</a>
                    {{ include('specialBenefit/_delete_form.html.twig', {'specialBenefit': specialBenefit}) }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
