{% extends 'base.html.twig' %}

{% block title %}Edit {{ benefit.label }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h1>Edit Sponsorship Benefit</h1>
        </div>
    </div>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-12">
            {{ form_widget(form) }}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-5">
            <a href="{{ path('sponsorship_benefit_index') }}" class="btn btn-light">Back to list</a>
        </div>
        <div class="col-7 text-right">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
