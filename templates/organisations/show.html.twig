{% extends "base.html.twig" %}

{% block title %}{{ organisation.name }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h1>{{ organisation.name }}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ organisation.name }}</td>
                </tr>
                <tr>
                    <th>Website</th>
                    <td><a href="{{ organisation.website }}">{{ organisation.website }}</a></td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ organisation.address | default('N/A') }}</td>
                </tr>
                <tr>
                    <th>Comment</th>
                    <td>{{ organisation.comment | default('N/A') }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-5">
            <a href="{{ path('organisation_list') }}" class="btn btn-light">Back to list</a>
        </div>
        <div class="col-7 text-right">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('organisation_edit', {'id': organisation.id}) }}" class="btn btn-warning">Edit</a>
                {{ include('organisations/_delete_form.html.twig', {'organisation': organisation}) }}
            {% endif %}
        </div>
    </div>
{% endblock %}
