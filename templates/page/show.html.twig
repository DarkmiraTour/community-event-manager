{% extends "base.html.twig" %}

{% block title %}Page - {{ page.title }}{% endblock %}

{% block content %}
    <div class="container">
        <h1>Page - {{ page.title }}</h1>

        <table class="table mt-lg-5">
            <tbody>
                <tr>
                    <th>Title</th>
                    <td>{{ page.title }}</td>
                </tr>
                <tr>
                    <th>Background</th>
                    <td><img src="{{ page.background|storage_url }}" class="img-fluid"></td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ page.content | nl2br}}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('page_index') }}" class="btn btn-light">Back to list</a>
        <div class="float-right">
            <a class="btn btn-secondary btn-sm" href="{{ path('page_edit', {'id': page.id}) }}">Edit</a>
            <form class="d-inline" method="post" action="{{ path('page_delete', {'id': page.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ page.id) }}">
                <button class="btn btn-danger btn-sm">Delete</button>
            </form>
        </div>
    </div>
{% endblock %}
