{% extends 'base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block content %}
    <div class="row">
        <div class="col col-6">
            <h1>Pages</h1>
        </div>
        <div class="col col-6">
            <p class="text-right">
                <a class="btn btn-primary" href="{{ path('page_create') }}">Create new</a>
            </p>
        </div>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Label</th>
                <th class="text-right">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.title }}</td>
                <td class="text-right">
                    <a class="btn btn-info btn-sm" href="{{ path('page_show', {'id': page.id}) }}">Show</a>
                    <a class="btn btn-secondary btn-sm" href="{{ path('page_edit', {'id': page.id}) }}">edit</a>
                    <form class="d-inline" method="post" action="{{ path('page_delete', {'id': page.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ page.id) }}">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
