{% extends 'base.html.twig' %}

{% block title %}Sponsorship Level index{% endblock %}

{% block content %}
    <div class="row">
        <div class="col col-6">
            <h1>Sponsorship Levels</h1>
        </div>
        <div class="col col-6">
            <p class="text-right">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-primary" href="{{ path('sponsorship_level_create') }}">Create new</a>
                {% endif %}
                
                <a class="btn btn-info" href="{{ path('sponsorship_level_benefit_view') }}">View Sponsorship Level Benefits</a>
            </p>
        </div>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Label</th>
                <th>Price</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th class="text-right">actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for level in levels %}
            <tr>
                <td>{{ level.label }}</td>
                <td>{{ level.price|localizedcurrency(currency) }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td class="text-right">
                        <a class="btn btn-secondary btn-sm" href="{{ path('sponsorship_level_edit', {'id': level.id}) }}">edit</a>
                        <form class="d-inline" method="post" action="{{ path('sponsorship_level_delete', {'id': level.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ level.id) }}">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
