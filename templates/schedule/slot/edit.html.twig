{% extends "base.html.twig" %}

{% block title %}Edit {{ slot.title }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h1>Edit Slot</h1>
        </div>
    </div>

    {{ form_start(form, {'action': path('schedule_slot_edit', {'id': slot.id})}) }}
    <div class="row">
        <div class="col-12">
            {{ form_row(form.space) }}
            <div class="form-group">
                {{ form_label(form.type) }}
                {{ form_widget(form.type) }}
                <a href="{{ path('schedule_slot_type_index') }}">Manage slot types</a>
                {{ form_help(form.type) }}
            </div>
            {{ form_errors(form.type) }}
            {{ form_row(form.talk) }}
            {{ form_row(form.title) }}
            {{ form_row(form.start) }}
            {{ form_row(form.end) }}
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <a class="btn btn-light text-left" href="{{ path('schedule_index') }}">Back to Schedule</a>
        </div>
        <div class="col-6">
            <button class="btn btn-success pull-right">Save Slot</button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/edit_slot.js') }}"></script>
{% endblock %}
