<div class="modal fade" id="modalAddSlot" tabindex="-1" role="dialog" aria-labelledby="addSlotModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {{ form_start(form, {'action': path('schedule_slot_insert')}) }}
            <div class="modal-header">
                <h5 class="modal-title" id="addSpaceModalLabel">Add Slot?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                {{ form_row(form.space) }}
                {{ form_errors(form.space) }}

                {{ form_row(form.type) }}
                {{ form_errors(form.type) }}

                {{ form_row(form.title) }}

                {{ form_row(form.start) }}

                {{ form_row(form.end) }}
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button class="btn btn-primary">Save new slot</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>